# Database Configuration
# MONGODB_URI=mongodb://localhost:27017/notificaciones


# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notifications-service
KAFKA_GROUP_ID=notifications-group
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_INITIAL_RETRY_TIME=100
KAFKA_RETRIES=8
KAFKA_SSL=false


# Kafka Topics
KAFKA_TOPIC_ORDERS_CREATED=orders.created
KAFKA_TOPIC_ORDERS_STATUS=orders.status_changed
KAFKA_TOPIC_PAYMENTS=payments.confirmed
KAFKA_TOPIC_SHIPPING=orders.shipped

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Settings
NOTIFICATION_DEFAULT_CHANNEL=email
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
